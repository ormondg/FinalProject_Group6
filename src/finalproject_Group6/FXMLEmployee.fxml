<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="finalproject_Group6.FXMLEmployeeController">
    <children>
        <GridPane>
            <children>
                <!--
                    Employee Records page
                -->
                <Label text="Create New Employee" GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="lblTitle" />
                
                <!--Start of Standard Info-->
                <Label text="Standard Information" GridPane.rowIndex="1" GridPane.columnIndex="0" fx:id="lblStandardInfo" />
                <Label text="Status: " GridPane.rowIndex="1" GridPane.columnIndex="3" fx:id="lblStatus" />
                <Label text="" GridPane.rowIndex="1" GridPane.columnIndex="4" fx:id="lblStatusShow" />
                
                <Label text="Last Name" GridPane.rowIndex="2" GridPane.columnIndex="0" fx:id="lblLastName" />
                <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="txtFirstName" />
                <Label text="Frist Name" GridPane.rowIndex="2" GridPane.columnIndex="3" fx:id="lblId" />
                <TextField GridPane.rowIndex="2" GridPane.columnIndex="4" fx:id="txtLastName" />
                
                <Label text="BirthDate" GridPane.rowIndex="3" GridPane.columnIndex="0" fx:id="lblBirthDate" />
                <TextField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="txtBirthDate" />
                <Label text="Gender" GridPane.rowIndex="3" GridPane.columnIndex="3" fx:id="lblGender" />
                <ComboBox GridPane.rowIndex="3" GridPane.columnIndex="4" fx:id="cmbGender" promptText="Select" />
                
                <Label text="Phone Number" GridPane.rowIndex="4" GridPane.columnIndex="0" fx:id="lblPhone" />
                <TextField GridPane.rowIndex="4" GridPane.columnIndex="1" fx:id="txtPhone" />
                <Label text="Email" GridPane.rowIndex="4" GridPane.columnIndex="3" fx:id="lblEmail" />
                <TextField GridPane.rowIndex="4" GridPane.columnIndex="4" fx:id="txtEmail" />
                
                <Label text="Hire Date" GridPane.rowIndex="5" GridPane.columnIndex="0" fx:id="lblHireDate" />
                <TextField GridPane.rowIndex="5" GridPane.columnIndex="1" fx:id="txtHireDate" />
                <Label text="End Date" GridPane.rowIndex="5" GridPane.columnIndex="3" fx:id="lblEndDate" />
                <Label text="" GridPane.rowIndex="5" GridPane.columnIndex="4" fx:id="lblEndDateFinal" />
                
                <!--Start of employee pay info-->
                <Label text="Pay Information" GridPane.rowIndex="6" GridPane.columnIndex="0" fx:id="lblPayInfo" />
                
                <Label text="Employee ID" GridPane.rowIndex="7" GridPane.columnIndex="0" fx:id="lblID" />
                <TextField GridPane.rowIndex="7" GridPane.columnIndex="1" fx:id="txtID" />
                <Label text="SIN" GridPane.rowIndex="7" GridPane.columnIndex="3" fx:id="lblSIN" />
                <TextField GridPane.rowIndex="7" GridPane.columnIndex="4" fx:id="txtSIN" />
                
                <Label text="Vacation Percent" GridPane.rowIndex="8" GridPane.columnIndex="0" fx:id="lblVacattionPercent" />
                <TextField GridPane.rowIndex="8" GridPane.columnIndex="1" fx:id="txtVacationPercent" />
                <Label text="Catagory" GridPane.rowIndex="8" GridPane.columnIndex="3" fx:id="lblCatagory" />
                <ComboBox GridPane.rowIndex="8" GridPane.columnIndex="4" fx:id="cmbCategory" promptText="Select" />
                
                <Label text="Pay Method" GridPane.rowIndex="9" GridPane.columnIndex="0" fx:id="lblPayMethod" />
                <ComboBox GridPane.rowIndex="9" GridPane.columnIndex="1" fx:id="cmbPayMethod" promptText="Select" />
                <Label text="Pay Amount" GridPane.rowIndex="9" GridPane.columnIndex="3" fx:id="lblPayAmount" />
                <TextField GridPane.rowIndex="9" GridPane.columnIndex="4" fx:id="txtPayAmount" />
                <!--End of collecting information-->
                
                <!--Start of Buttons/navigation-->
                <Button GridPane.rowIndex="11" GridPane.columnIndex="0" text="Create" onAction="#createEmployeeButton" fx:id="btnFind" />
                <Button GridPane.rowIndex="11" GridPane.columnIndex="2" text="Cancel" onAction="#cancelToIndex" fx:id="btnCreate" />
                
                
            </children>
        </GridPane>
        
    </children>
</AnchorPane>